{
  "name": "pos_system",
  "version": "1.0.0",
  "author": {
    "name": "Bernard Codjoe",
    "url": "http://ibit-soft.com"
  },
  "description": "POS app",
  "private": true,
  "build": {
    "files": [
      "./dist/**/*",
      "./pages/**/*",
      "./node_modules/**/*"
    ],
    "appId": "com.prosoft.pos",
    "mac": {
      "category": "com.prosoft.pos"
    },
    "productName": "Point Of Sale",
    "copyright": "Copyright Â© 2018 ${author}",
    "asar": false
  },
  "scripts": {
    "mock": "node mock-server/",
    "start": "run-p mock dev:renderer",
    "dev:main": "cross-env ESLINT=none BROWSER=none COMPRESS=none roadhog build -w",
    "dev:renderer": "cross-env ESLINT=none APP_ROOT=src/renderer BROWSER=none umi dev",
    "dev": "run-p dev:renderer dev:main",
    "build:renderer": "cross-env ESLINT=none APP_ROOT=src/renderer umi build",
    "build:main": "cross-env ESLINT=none roadhog build",
    "build": "yarn build:main && yarn build:renderer",
    "pack": "yarn build && yarn rebuild && build",
    "pack:dir": "yarn build && yarn rebuild && build --dir",
    "pack:dist": "build",
    "rebuild": "electron-rebuild -m ./app",
    "test": "cross-env APP_ROOT=src/renderer umi test",
    "lint:es": "eslint --ext .js src mock tests",
    "lint:ts": "tslint \"src/**/*.ts\" \"src/**/*.tsx\"",
    "noprecommit": "lint-staged",
    "now-build": "run-p dev:renderer"
  },
  "dependencies": {
    "@antv/data-set": "0.10.1",
    "antd": "3.12.1",
    "bizcharts": "3.4.3",
    "bizcharts-plugin-slider": "2.1.1-beta.1",
    "classnames": "2.2.6",
    "core-util-is": "1.0.2",
    "dva": "2.5.0-beta.2",
    "enquire-js": "0.2.1",
    "lodash-decorators": "6.0.1",
    "mini-css-extract-plugin": "^0.9.0",
    "moment": "2.23.0",
    "numeral": "2.0.6",
    "path-to-regexp": "3.0.0",
    "qrcode": "1.3.3",
    "qrcode-reader": "1.0.4",
    "rc-drawer": "1.7.7",
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-fittext": "1.0.0"
  },
  "devDependencies": {
    "@types/antd": "1.0.0",
    "@types/jest": "23.3.12",
    "@types/react": "16.7.18",
    "@types/react-dom": "16.0.11",
    "@types/react-test-renderer": "16.0.3",
    "babel-eslint": "9.0.0",
    "concurrently": "4.1.0",
    "cross-env": "5.2.0",
    "electron": "4.0.1",
    "electron-builder": "20.38.4",
    "electron-dev": "1.0.1",
    "electron-rebuild": "1.8.2",
    "eslint": "5.4.0",
    "eslint-config-umi": "1.4.0",
    "eslint-plugin-flowtype": "2.50.0",
    "eslint-plugin-import": "2.14.0",
    "eslint-plugin-jsx-a11y": "5.1.1",
    "eslint-plugin-react": "7.11.1",
    "husky": "0.14.3",
    "lint-staged": "7.2.2",
    "npm-run-all": "4.1.5",
    "react-test-renderer": "16.7.0",
    "roadhog": "2.4.9",
    "tslint": "5.12.0",
    "tslint-eslint-rules": "5.4.0",
    "tslint-react": "3.6.0",
    "umi": "2.4.2",
    "umi-plugin-react": "1.4.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engines": {
    "node": ">=8.0.0"
  }
}
